@model Models.EF.User

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div style="margin-top:150px" >
    @using (Html.BeginForm("EditUser", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div id="project" class="project">


            <br /><br />
            <div class="container" style="margin-left:104px; margin-right:104px; padding-left:15px; padding-right:15px">
                <div class="card" style="background: rgba(0,0,0,0.5); min-height: 200px;">
                    <div class="card-header" style="background: rgba(0,0,0,0.5); ">
                        <div class="row">
                            <h1 style="color: white; margin-left: 30px">Thay đổi thông tin tài khoản</h1>
                        </div>
                    </div>
                    <br />
                    <div class="card-body" style="text-align: center">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<img height="120" width="120" src="~/ImagesUser/@Model.imageUser" alt="user" />*@
                        <br />
                        <br />
                        <br />
                        <div class="row" style="margin-left: 10px; display:flex">
                            <div class="col-md-5" style=" margin-top: 15px; text-align: left; width: 50%">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; width: 50%; padding-left: 15px; padding-right: 15px ">
                                        <h2 style="color:white">Tên người dùng:</h2>
                                    </div>
                                    <div class="col-md-6" style="width: 50%; padding-left: 15px; padding-right: 15px">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6" style=" margin-top: 15px; text-align: left; width: 50%">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; width: 50%; padding-left: 15px; padding-right: 15px ">
                                        <h2 style="color:white">Địa chỉ: </h2>
                                    </div>
                                    <div class="col-md-6" style="width: 50%; padding-left: 15px; padding-right: 15px">

                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-left: 10px; display:flex">
                            <div class="col-md-5" style=" margin-top: 15px; text-align: left; width: 50%">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; width: 50%; padding-left: 15px; padding-right: 15px">
                                        <h2 style="color:white">Địa chỉ mail: </h2>
                                    </div>
                                    <div class="col-md-6" style="width: 50%; padding-left: 15px; padding-right: 15px">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6" style="margin-top: 15px; text-align: left; width: 50% ">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; width: 50%; padding-left: 15px; padding-right: 15px">
                                        <h2 style="color:white">Số điện thoại :</h2>
                                    </div>
                                    <div class="col-md-6" style="width: 50%; padding-left: 15px; padding-right: 15px">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-left: 10px; display: none">
                            <div class="col-md-5" style=" margin-top: 15px; text-align: left">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; padding-left: 15px; padding-right: 15px">
                                        <h2 style="color:white">Mật khẩu:</h2>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6" style="margin-top: 15px; text-align: left; width: 50% ">
                                <div class="row" style="display:flex">
                                    <div class="col-md-6" style="text-align: right; width: 50%; padding-left: 15px; padding-right: 15px">
                                        <h2 style="color:white">Số điện thoại :</h2>
                                    </div>
                                    <div class="col-md-6" style="width: 50%; padding-left: 15px; padding-right: 15px">
                                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer" style="text-align: right; height: 60px;padding-top:20px;padding-right:67px">
                        <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Lưu</button>
                    </div>
                </div>
            </div>
        </div>




    }
</div>








