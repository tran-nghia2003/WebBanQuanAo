@model Models.EF.User

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="~/css/Register.css" rel="stylesheet" />

<div class="sigup">
    <div class="sigup-title"></div>
    <div class="sigup1">
        <div class="sigup2">
            @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h1>Quên mật khẩu</h1>
                    <hr />
                    
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                            <input style="height: 40px" id="maill" name="maill" placeholder="Nhập email của bạn..." class="form-control" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="color: red; text-align: left">
                            @ViewData["ErrorMail"]
                            @ViewData["null"]
                        </div>
                        <div style="color: forestgreen; text-align: left">
                            @ViewData["Success"]
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Xác nhận" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .btn-default {
        background-color: #f44336; /* Màu nền */
        border: none;
        color: white; /* Màu chữ */
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        padding: 10px 20px; /* Kích thước nút */
        border-radius: 5px; /* Đường cong viền */
        transition-duration: 0.4s; /* Hiệu ứng hover */
        cursor: pointer;
    }

        .btn-default:hover {
            background-color: #d32f2f; /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
        }
</style>
