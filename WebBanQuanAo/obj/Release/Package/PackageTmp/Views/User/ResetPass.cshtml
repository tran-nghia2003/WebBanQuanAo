@model Models.EF.User

@{
    ViewBag.Title = "ResetPass";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<link href="~/css/Register.css" rel="stylesheet" />

<div class="sigup">
    <div class="sigup-title"></div>
    <div class="sigup1">
        <div class="sigup2">
            @using (Html.BeginForm("ResetPass", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h1>Đặt lại mật khẩu</h1>
                    <hr />

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input style="height: 40px" id="emaill" name="emaill" class="form-control" type="email" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input style="height: 40px" id="password" name="password" placeholder="Nhập mật khẩu mới" class="form-control" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input style="height: 40px" id="password" name="respassword" placeholder="Nhập lại mật khẩu" class="form-control" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="color: red; text-align: left">
                            @ViewData["Error2"]
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            <input style="height: 40px" id="confirm" name="confirm" placeholder="Mã xác nhận" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="color: red; text-align: left">
                            @ViewData["Error1"]
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Xác nhận" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

