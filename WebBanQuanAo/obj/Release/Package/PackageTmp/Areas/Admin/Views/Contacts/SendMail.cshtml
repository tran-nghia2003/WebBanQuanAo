@model Models.EF.Feedback
@{
    ViewBag.Title = "SendMail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/HomeAdmin/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Contacts/Index" class="nav-link">Liên hệ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="" class="nav-link">Chi tiết thông tin liên hệ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="" class="nav-link">Phản hồi</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết liên hệ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Liên hệ</a></li>

                    <li class="breadcrumb-item active">Phản hồi</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 style="color: white; margin-left: 30px">Gửi đến @Model.Name</h3>
            <div class="card-tools">

            </div>
        </div>
        @using (Html.BeginForm("WriteMail", "Contacts"))
        {
            @Html.AntiForgeryToken()
            <div class="card-body">
                <div class="row" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; color: black">
                    <h5>Địa chỉ email :</h5>
                </div>
                <div class="row">
                    <input style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; padding: 5px" type="text" name="to" value="@Model.Email" />
                </div><br />
                <div class="row" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; color: black">
                    <h5>Nội dung :</h5>
                </div>
                <div class="row">
                    <textarea id="contentPosts" name="content" placeholder="Nhập nội dung thư ..." rows="3" style="width: 100%; margin: 30px;margin-top: 10px;margin-bottom: 10px; padding: 5px"></textarea>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <p>
                    <button type="submit" class="add_posts" style="padding: 5px; padding-right: 10px; padding-left: 10px; margin-right: 30px; background-color: white; color: black">Gửi</button>
                    @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-primary" })
                </p>
            </div>
            <!-- /.card-footer-->
        }
    </div>
    <!-- /.card -->

</section>

