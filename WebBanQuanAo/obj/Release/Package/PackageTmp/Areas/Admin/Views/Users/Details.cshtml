@model Models.EF.User

@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/HomeAdmin/Index" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/users/Index" class="nav-link">Tài khoản khoản</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/users/details" class="nav-link">Thông tin tài khoản</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin tài khoản</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Tài khoản</a></li>
                    <li class="breadcrumb-item active">Thông tin tài khoản</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<div class="user-details" style="margin-left:30px">

    <dl class="dl-horizontal">
        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="detail-label">
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd class="detail-value">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<p style="margin-left:30px">
    <a href="@Url.Action("Edit", new { id = Model.ID })" class="btn btn-success">Cập nhật</a> |
    @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-primary" })
</p>
