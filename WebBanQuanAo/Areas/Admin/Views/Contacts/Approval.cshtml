@model Models.EF.Feedback
@{
    ViewBag.Title = "Approval";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/HomeAdmin/Index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="~/Admin/Contacts/Index" class="nav-link">Liên hệ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="" class="nav-link">Chi tiết thông tin liên hệ</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết liên hệ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Liên hệ</a></li>
                    <li class="breadcrumb-item active">Chi tiết liên hệ</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết liên hệ</h3>
            <div class="card-tools">

            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã liên hệ</label>
                        <p class="form-group">@Model.ID</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ tên khách hàng</label>
                        <p class="form-group">@Model.Name</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-group">@string.Format("{0:N0} VNĐ", Model.CreateDate)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-group">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-group">@Model.Address</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-group">@Model.Email</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h2>Nội dung</h2>
                </div>
                <div class="col-md-12">
                    <p>@Model.Content</p>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <p>
                <a style="padding: 5px; padding-left: 15px; padding-right: 15px; background-color: peru; color: white" href="@Url.Action("SendMail","Contacts", new { id = @Model.ID })">Trả lời thư</a>
                @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-primary" })
            </p>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>

